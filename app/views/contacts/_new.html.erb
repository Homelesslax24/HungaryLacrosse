<div class="left">
  <%= render 'contacts/create' %>
  <%= form_for :contact, url: contacts_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: false, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: false, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %><br />
      <%= f.text_area :message, autofocus: false, required: true, class: "form-control contact-message", rows: "10" %>
    </div>
    
    <div style="display:none;">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit 'Send', class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>