<!DOCTYPE html>
<html>
  <head>
    <title>Hungarian Lacrosse Association | <%= yield :title || "The Official Site of Lacrosse in Hungary" %></title>
    <%= yield :head_top %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="//load.sumome.com/" data-sumo-site-id="3e1459dc5c28e41f578d4f4deb967329128f80c199a6c43aa3629c379d4ba90b" async="async"></script>
    <%= yield :head_end %>
  </head>
  <body class="parallax">
    <%= yield :body_top %>
    
  	<div>
  		<%= render 'layouts/header' %>
  	</div>
  	
  	<div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "row col-lg-8 col-lg-offset-1 alert alert-info first-item", style: "position:fixed;") do %>
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% end %>
      <% end %>
    </div>

    <div>
  	  <%= yield %>
    </div>
  		
  	<%= render 'layouts/footer' %>
  	
    <%= yield :body_end %>	
  </body>
</html>
