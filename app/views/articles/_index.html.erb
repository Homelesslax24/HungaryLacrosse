<div class="jumbotron center no-margin-top", id="news"> <!-- News -->
	<div class="row">
		<h2 class="section-title">News</h2>
		<div class="col-xs-12 col-md-9" id="news-feed"> <!-- News Articles -->
			<div class="container-fluid">
				<% @articles.each do |article| %>
					<div class="col-xs-12 news-item">
						<div class="jumbotron col-xs-12 left">
							<%= link_to(image_tag(article.featured_image.url, :alt => truncate(article.title, length: 10) + "image", class:"post-img-main"), article) %> <!-- Needs to be dynamic XXXX -->
							<h2><%= link_to article.title, article %></h2>
							<h4><%= article.subtitle %></h4>
							<h6 class="light"><%= l(article.published_at, :format=>:article_date) %> <%= l(article.published_at, :format=>:article_year) %></h6>
							<hr>
							<p><%= truncate article.text, length: 175 %><p>
							<h4 class="read-more"><%= link_to "Read more...", article %></h4>
						</div>	
					</div>	
				<% end %>
			</div>
			<% if @more_articles %>
				<p class="center"><%= link_to "See All Past Articles", articles_path %></p>
			<% end %>	
		</div>	
		<div class="col-xs-12 col-md-3" id="social-news">	<!-- Social News Feed -->
			<div class="container-fluid primary-color left">
				<div class="row col-xs-12 social-feed">  <!-- Twitter Feed -->
					<a class="twitter-timeline" href="https://twitter.com/Hungary_Lax" data-widget-id="685940902968324101">Tweets by @Hungary_Lax</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
				</div>
				<div class="row col-xs-12 social-feed">  <!-- Facebook Feed -->
					<div class="fb-page" data-href="https://www.facebook.com/hungarianlacrosse/" data-tabs="timeline" data-height="410" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/hungarianlacrosse/"><a href="https://www.facebook.com/hungarianlacrosse/">Hungarian Lacrosse Association / Magyarországi Lacrosse Szövetség</a></blockquote></div></div>
				</div>
