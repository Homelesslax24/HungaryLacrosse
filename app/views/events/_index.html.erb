<div class="jumbotron center no-margin-top", id="events"> 
	<h2 class="section-title">Upcoming Events</h2>
	<div class="container-fluid">
		<% @events.each do |event| %>
			<div class="col-xs-12 event-post">
				<div class="jumbotron col-xs-12">
					<div class="col-xs-12 col-md-5">
						<%= link_to image_tag(event.featured_image.url, :alt => event.name + " Image", class:"event-img-main"), event.website, target: "_blank" %>
					</div>
					<div class="col-xs-12 col-md-7">
						<div class="row event-header">
							<h2><%= link_to event.name, event.website, target: "_blank" %></h2>
							<h4 class="light"><%= l(event.start_date, :format=>:event_date) %> - <%= l(event.end_date, :format=>:event_date) %></h4>
							<hr>
						</div>
						<div class="row event-text">
							<p><%= event.text.html_safe %><p>

							<%= link_to "Click here to find out more about the " + event.name, event.website, target: "_blank" %>	
						</div>	
					</div>	
				</div>
			</div>	
		<% end %>
	</div>	
</div>