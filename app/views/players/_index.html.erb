<div class="row"> <!-- Roster -->
	<h3 class="center"><strong>Roster</strong></h3>
	<div class="table-responsive">
		<table class="table table-condensed center"> <!-- XXXX responsive team generated here -->
			<tr>
				<th> </th>
				<th>Number</th>	
				<th>Name</th>	
				<th>Position</th>	
				<th>Club</th>
			</tr>
			<% @players.each do |player| %>
				<tr>
					<td><%= image_tag(player.image.url, :alt => player.name + " Player Image", class:"player-img") %></td>
					<td><%= link_to player.number, player %></td>
					<td><%= link_to player.name, player %></td>
					<td><%= link_to player.position, player %></td>
					<td><%= link_to player.club, player %></td>
				</tr>
			<% end %>
		</table>
	</div>	
